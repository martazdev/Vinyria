---
import { CheckCircle2, XCircle } from 'lucide-react';

interface Props {
  pros: string[];
  cons: string[];
}

const { pros, cons } = Astro.props;
---

<div class="grid md:grid-cols-2 gap-6 my-8 not-prose">
  <!-- Pros -->
  <div class="bg-emerald-50 border border-emerald-100 rounded-xl p-6 shadow-sm">
    <h3 class="flex items-center gap-2 text-emerald-800 font-bold text-lg mb-4">
      <CheckCircle2 class="text-emerald-600" /> Pros
    </h3>
    <ul class="space-y-2">
      {pros.map(pro => (
        <li class="flex items-start gap-2 text-slate-700">
          <span class="text-emerald-600 mt-1">•</span>
          <span>{pro}</span>
        </li>
      ))}
    </ul>
  </div>

  <!-- Cons -->
  <div class="bg-red-50 border border-red-100 rounded-xl p-6 shadow-sm">
    <h3 class="flex items-center gap-2 text-red-800 font-bold text-lg mb-4">
      <XCircle class="text-red-600" /> Cons
    </h3>
    <ul class="space-y-2">
      {cons.map(con => (
        <li class="flex items-start gap-2 text-slate-700">
          <span class="text-red-500 mt-1">•</span>
          <span>{con}</span>
        </li>
      ))}
    </ul>
  </div>
</div>
