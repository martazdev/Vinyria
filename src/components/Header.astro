---
const { class: className } = Astro.props;
---

<header id="main-header" class:list={["fixed w-full top-0 z-50 transition-all duration-300 backdrop-blur-xl bg-white/80 border-b border-white/40 shadow-sm supports-[backdrop-filter]:bg-white/60 ring-1 ring-white/40", className]}>
  <div class="absolute inset-0 bg-gradient-to-r from-emerald-50/80 via-white/80 to-emerald-50/80 opacity-70 pointer-events-none"></div>
  <div class="container mx-auto px-4 py-4 flex justify-between items-center relative z-10">
    <a href="/" class="text-2xl font-bold text-emerald-800 flex items-center gap-2 tracking-tight">
      Vinyria
    </a>
    
    <!-- Mobile Menu Button -->
    <button id="menu-toggle" class="md:hidden text-emerald-800 focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>

    <!-- Navigation -->
    <nav id="nav-menu" class="hidden md:block absolute md:relative top-full left-0 w-full md:w-auto bg-white md:bg-transparent shadow-lg md:shadow-none p-4 md:p-0 transition-all">
      <ul class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-8 text-slate-800 font-medium text-center md:text-left">
        <li><a href="/" class="block hover:text-emerald-700 hover:scale-105 transition">Home</a></li>
        <li><a href="/blog" class="block hover:text-emerald-700 hover:scale-105 transition">Reviews</a></li>
        <li><a href="/about" class="block hover:text-emerald-700 hover:scale-105 transition">About</a></li>
      </ul>
    </nav>
  </div>
</header>
<div class="h-[72px]"></div> <!-- Spacer to prevent content jump -->

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const navMenu = document.getElementById('nav-menu');

  if (menuToggle && navMenu) {
    menuToggle.addEventListener('click', () => {
      navMenu.classList.toggle('hidden');
    });
  }
</script>
